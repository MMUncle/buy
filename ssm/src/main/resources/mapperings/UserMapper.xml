<?xml version="1.0" encoding="UTF-8" ?><!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pjl.mapper.UserMapper">
    <insert id="saveUser" parameterType="com.pjl.pojo.User">
        insert into user
        <set>
            <if test="age !=null and age != ''">
                age = #{age},
            </if>
            <if test="name != null and name != ''">
                name = #{name}
            </if>
        </set>
    </insert>
    <select id="getAllUser" resultType="com.pjl.pojo.User">
        select  * from user
    </select>

    <select id="getUserById" resultType="com.pjl.pojo.User">
        select * from user where id = #{id};
    </select>

    <update id="updateUser" parameterType="com.pjl.pojo.User">
        update user
        <set>
            <if test="name != null and name !=''">
                name = #{name},
            </if>
            <if test="age != null and age != ''">
                age = #{age}
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="deleteUserById" parameterType="integer">
        delete from user where id=#{id}
    </delete>
</mapper>